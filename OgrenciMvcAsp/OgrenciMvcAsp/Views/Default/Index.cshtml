@using OgrenciMvcAsp.Models.EntityFramework
@model List<TblOgrenciler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Öğrenci Menu</h2>
<table class="table table-bordered">
    <tr>
        <th>Öğrenci ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Cinsiyet</th>
        <th>Kulüp</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OGRID</td>
                <td>@item.OGRAD</td>
                <td>@item.OGRSOYAD</td>
                <td>@item.OGRCİNSİYET</td>
                <td>@item.TblKulupler.KULUPAD</td>
                <td><a href="/Default/Sil/@item.OGRID" class="btn btn-danger">Sil</a>
                <a href="/Default/OgrGetir/@item.OGRID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Default/YeniOgrenciEkle" class="btn btn-primary">Yeni Öğrenci Ekle</a>


