@using OgrenciMvcAsp.Models.EntityFramework
@model List<TblNotlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Notlar Menu</h2>
<table class="table table-bordered">
    <tr>
        <th>Not ID</th>
        <th>Ders</th>
        <th>Öğrenci ID</th>
        <th>Öğrenci Ad Soyad</th>
        <th>Sınav 1</th>
        <th>Sınav 2</th>
        <th>Sınav 3</th>
        <th>Proje</th>
        <th>Ortalama</th>
        <th>Durum</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NOTID</td>
                <td>@item.TblDersler.DERSAD</td>
                <td>@item.OGRID</td>
                <td>@item.TblOgrenciler.OGRAD @item.TblOgrenciler.OGRSOYAD</td>
                <td>@item.SINAV1</td>
                <td>@item.SINAV2</td>
                <td>@item.SINAV3</td>
                <td>@item.PROJE</td>
                <td>@item.ORTALAMA</td>
                <td>@item.DURUM</td>
                <td><a href="/Notlar/NotGetir/@item.NOTID" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Notlar/YeniNot" class="btn btn-primary">Yeni Not Girişi</a>

